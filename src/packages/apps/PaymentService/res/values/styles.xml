<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Main" parent="miui:style/V5.Theme.Light"></style>

    <style name="Theme.Dialog" parent="miui:style/V5.Theme.Light.Dialog.NoTitle"></style>

    <style name="Theme.NoDisplay" parent="miui:style/V5.Theme.NoDisplay"></style>

    <style name="Theme.Settings" parent="miui:style/V5.Theme.Light.Settings"></style>

    <style name="Theme.SettingsActionBarWithLogo" parent="@style/Theme.Settings">
        <item name="android:actionBarStyle">@style/ActionBarWithLogo</item>
    </style>

    <style name="Theme.NoTitle" parent="@style/Theme.Main">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.ActionBarTab" parent="@miui:style/V5.Theme.Light.ActionBar.NoTitle" />

    <style name="RadioButton">
        <item name="android:background">@miui:drawable/v5_preference_item_bg</item>
    </style>

    <style name="ButtonNormal" parent="@miui:style/V5.Widget.Button"></style>

    <style name="ButtonNotice" parent="@miui:style/V5.Widget.Button.PositiveWarn"></style>

    <style name="ListItemPrimary" parent="@miui:style/V5.TextAppearance.List.Primary" />

    <style name="ListItemSecondary" parent="@miui:style/V5.TextAppearance.List.Secondary" />

    <style name="RechargeItem" parent="@miui:style/V5.Widget.ListView.Item.DoubleLine" />

    <style name="RecordItem" parent="@miui:style/V5.Widget.ListView.Item.DoubleLine" />

    <style name="Spinner">
        <item name="android:background">@miui:drawable/v5_spinner_bg_light</item>
    </style>

    <style name="ActionBarWithLogo" parent="@miui:style/V5.Widget.ActionBar">
        <item name="android:displayOptions">useLogo|showHome|showTitle</item>
        <item name="android:logo">@drawable/action_bar_logo</item>
    </style>
</resources>
